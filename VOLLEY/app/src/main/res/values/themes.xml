<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Projetws" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Projetws" parent="Base.Theme.Projetws" />

    <style name="text">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#FF333333</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="button">
        <item name="android:background">@drawable/button_bg</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingVertical">12dp</item>
        <item name="android:paddingHorizontal">24dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ItemCard">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:strokeColor">#DDDDDD</item>
        <item name="cardElevation">4dp</item>
        <item name="useCompatPadding">true</item>
        <item name="android:layout_marginVertical">8dp</item>
        <item name="android:layout_marginHorizontal">12dp</item>
        <item name="android:padding">12dp</item>
    </style>





    <style name="input">
        <item name="android:background">@drawable/spinner_bg</item>
        <item name="android:popupBackground">@drawable/spinner_dropdown_bg</item>
        <item name="android:padding">4dp</item>
    </style>
</resources>